{
	"compilerOptions": {
		"module": "esnext",
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "react-jsx",
		"outDir": "dist",
		"declarationDir": "dist",
		"esModuleInterop": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"emitDeclarationOnly": false
	},
	"exclude": ["dist", "node_modules"]
}
